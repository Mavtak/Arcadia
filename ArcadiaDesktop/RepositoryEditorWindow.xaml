<Window x:Class="SomewhatGeeky.Arcadia.Desktop.RepositoryEditorWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Repository Editor" Height="285" Width="555" WindowStartupLocation="CenterOwner">
    <Grid>
        <Label Height="28" Margin="12,11,0,0" Name="nameLabel" VerticalAlignment="Top" HorizontalAlignment="Left" Width="97">Name:</Label>
        <TextBox Height="23" Margin="115,16,12,0" Name="nameBox" VerticalAlignment="Top" />
        <Label Height="28" HorizontalAlignment="Left" Margin="12,45,0,0" Name="rootPathLabel" VerticalAlignment="Top" Width="97">Root Path:</Label>
        <TextBox Height="23" Margin="115,45,93,0" Name="rootPathBox" VerticalAlignment="Top" />
        <Button Name="okButton" HorizontalAlignment="Right" VerticalAlignment="Top" Width="75" Margin="0,103,93,121" IsDefault="True" Click="okButton_Click">OK</Button>
        <Button Name="cancelButton" HorizontalAlignment="Right" VerticalAlignment="Top" Width="75" Margin="0,103,12,121" Click="cancelButton_Click" IsCancel="True">Cancel</Button>
        <Button Height="23" HorizontalAlignment="Right" Margin="0,45,12,0" Name="browseButton" VerticalAlignment="Top" Width="75" Click="browseButton_Click">Browse...</Button>
    </Grid>
</Window>
